<UserControl x:Class="ImageProcessing.StartWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProcessing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image 
            Grid.Row="0"
            Grid.Column="0"
            Source="{Binding p_bmpImg}"/>
        <Image
            Grid.Row="0"
            Grid.Column="1"
            Source="{Binding p_bmpImgResult}"/>
        <Button 
            Grid.Row="1"
            Grid.Column="0"
            Content="Image Open"
            Command="{Binding ImageOpenCommand}"/>
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Content="Image Processing"
            Command="{Binding ProcessingCommand}"/>
    </Grid>
</UserControl>
